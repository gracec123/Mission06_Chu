@model Collection

<!--This is a page to confirm if the user confirm to delete the movie-->

<h2>Confirm Deletion</h2>
<h3>@Model.Title, @Model.Year</h3>

<form method="post">

    <input type="hidden" asp-for="MovieId"/>

    <button class="btn btn-danger" type="submit">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="MovieList">Cancel</a>
</form>