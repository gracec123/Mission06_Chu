@model Mission06_Chu.Models.Collection

<!--This is movie Collection page with a form for user to enter the moive to the database-->
<h1>Movie Collection</h1>

<form method="post">

    <label asp-for="Category">Category:</label><br>
    <input asp-for="Category" required /><br>

    <label asp-for="Title">Title:</label><br>
    <input asp-for="Title" required /><br>

    <label asp-for="Year">Year:</label><br>
    <input asp-for="Year" min="1900" max="2099" required /><br>

    <label asp-for="Director">Director:</label><br>
    <input asp-for="Director" required /><br>

    <label asp-for="Rating">Rating:</label><br>
    <select asp-for="Rating" required>
        <option value="">Select Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br>

    <label asp-for="Edited">Edited:</label><br>
    <input type="radio" asp-for="Edited" value="true">Yes
    <input type="radio" asp-for="Edited" value="false">No<br>

    <label asp-for="LentTo">Lent To:</label><br>
    <input asp-for="LentTo" /><br>

    <label asp-for="Notes">Notes (max 25 characters):</label><br>
    <input asp-for="Notes" maxlength="25" /><br><br />

    <button type="submit">Submit</button>
</form>